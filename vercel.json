{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm ci",
  "env": {
    "DEEPSEEK_API_KEY": {
      "description": "DeepSeek API key for AI interpretation"
    },
    "DEEPSEEK_BASE_URL": {
      "description": "DeepSeek API base URL (optional, defaults to https://api.deepseek.com)",
      "default": "https://api.deepseek.com"
    }
  },
  "functions": {
    "app/api/readings/interpret/**": {
      "memory": 1024,
      "maxDuration": 15
    },
    "app/api/**": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/cards/**": {
      "memory": 1024,
      "maxDuration": 5
    }
  },
  "regions": ["fra1", "ams1", "dub1", "lhr1"],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}
