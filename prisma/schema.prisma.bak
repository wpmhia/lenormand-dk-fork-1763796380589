datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:npg_V7BhziZvd0Yc@ep-summer-frog-ahvo8aw5-pooler.c-3.us-east-1.aws.neon.tech/neondb?channel_binding=require&sslmode=require"
}

generator client {
  provider = "prisma-client-js"
}

model Card {
  id               Int     @id
  name             String  @unique
  number           Int
  keywords         String[] // JSON array stored as text[]
  uprightMeaning   String
  combinations     CardCombination[] @relation("cardCombinations")
  combinedWithCard CardCombination[] @relation("combinedCardCombinations")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([name])
}

model CardCombination {
  id            String   @id @default(cuid())
  cardId        Int
  card          Card     @relation("cardCombinations", fields: [cardId], references: [id], onDelete: Cascade)
  withCardId    Int
  withCard      Card     @relation("combinedCardCombinations", fields: [withCardId], references: [id], onDelete: Cascade)
  meaning       String
  context       String?
  examples      String[]
  category      String?
  strength      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([cardId, withCardId])
  @@index([cardId])
  @@index([withCardId])
}

model ReadingAnalytics {
  id            String   @id @default(cuid())
  sessionId     String?
  spreadType    String
  cardCount     Int
  questionCategory String
  interpretationSource String // 'unique-static' | 'ai' | 'static'
  readingDuration Int    // milliseconds
  cards         Json     // Store card data for analytics
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model CardPopularity {
  id          String @id @default(cuid())
  cardId      Int
  cardName    String
  usageCount  Int @default(1)
  questionCategories String[] // Array of categories this card appears in
  lastUsed    DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PerformanceMetrics {
  id        String @id @default(cuid())
  metricType String // 'response_time' | 'interpretation_source' | 'cache_hit_rate' | 'daily_volume'
  value      Float
  metadata   Json? // Additional context
  date       DateTime @default(now())
  createdAt  DateTime @default(now())
}

model UserInteraction {
  id            String @id @default(cuid())
  sessionId     String?
  interactionType String // 'reading_completed' | 'card_favorited' | 'question_asked'
  metadata      Json? // Reading details, ratings, etc.
  createdAt      DateTime @default(now())
}
