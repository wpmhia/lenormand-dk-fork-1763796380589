datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reading {
  id        String   @id @default(uuid())
  request   Json
  response  Json
  duration  Int
  createdAt DateTime @default(now()) @map("created_at")

  @@map("readings")
}

model Feedback {
  id              String   @id @default(uuid())
  type            String
  question        String?
  spreadId        String?
  cards           Json?
  readingText     String?
  translationText String?
  createdAt       DateTime @default(now()) @map("created_at")

  @@map("feedback")
}
