datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reading {
  id        String   @id @default(uuid())
  request   Json
  response  Json
  duration  Int
  createdAt DateTime @default(now()) @map("created_at")

  @@map("readings")
}

model Feedback {
  id                    String   @id @default(uuid())
  isHelpful             Boolean  // true = thumbs up, false = thumbs down
  question              String?
  spreadId              String?
  cards                 Json?
  readingText           String?
  translationText       String?
  aiInterpretationId    String?  @map("ai_interpretation_id")
  userReadingId         String?  @map("user_reading_id")
  promptTemperature     Float?   @map("prompt_temperature") // track which temperature was used
  promptVariant         String?  @map("prompt_variant") // track which prompt variant generated this
  createdAt             DateTime @default(now()) @map("created_at")

  @@index([isHelpful])
  @@index([spreadId])
  @@index([promptVariant])
  @@map("feedback")
}

model PromptVariant {
  id                    String   @id @default(uuid())
  name                  String   // e.g., "v1_baseline", "v2_detailed_instructions"
  description           String?
  spreadId              String   @map("spread_id")
  temperature           Float    // temperature used with this variant
  promptTemplate        String   @map("prompt_template") // the actual prompt template
  isActive              Boolean  @default(true) @map("is_active")
  totalReadingsGenerated Int    @default(0) @map("total_readings_generated")
  helpfulCount          Int      @default(0) @map("helpful_count")
  unhelpfulCount        Int      @default(0) @map("unhelpful_count")
  helpfulnessRate       Float    @default(0) @map("helpfulness_rate") // helpful_count / (helpful_count + unhelpful_count)
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@index([spreadId])
  @@index([isActive])
  @@index([helpfulnessRate])
  @@map("prompt_variants")
}

model FeedbackPattern {
  id                    String   @id @default(uuid())
  spreadId              String   @map("spread_id")
  pattern               String   // e.g., "cards_with_timing", "emotional_vs_practical"
  totalOccurrences      Int      @default(0) @map("total_occurrences")
  helpfulCount          Int      @default(0) @map("helpful_count")
  helpfulnessRate       Float    @default(0) @map("helpfulness_rate")
  insights              String?  // text description of what works
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@unique([spreadId, pattern])
  @@index([helpfulnessRate])
  @@map("feedback_patterns")
}

model OptimizationMetrics {
  id                      String   @id @default(uuid())
  periodStartDate         DateTime @map("period_start_date")
  periodEndDate           DateTime @map("period_end_date")
  spreadId                String   @map("spread_id")
  totalFeedbackCollected  Int      @map("total_feedback_collected")
  helpfulCount            Int      @map("helpful_count")
  unhelpfulCount          Int      @map("unhelpful_count")
  helpfulnessRate         Float    @map("helpfulness_rate")
  bestPerformingVariant   String?  @map("best_performing_variant") // which variant had highest helpfulness
  improvementSinceLastPeriod Float? @map("improvement_since_last_period")
  createdAt               DateTime @default(now()) @map("created_at")

  @@unique([periodStartDate, periodEndDate, spreadId])
  @@index([spreadId])
  @@map("optimization_metrics")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userReadings UserReading[]

  @@map("users")
}

model UserReading {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String?
  question  String
  spreadId  String   @map("spread_id")
  cards     Json
  layoutType Int      @map("layout_type")
  isPublic  Boolean  @default(false) @map("is_public")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  aiInterpretations AIInterpretation[]

  @@index([userId])
  @@map("user_readings")
}

model AIInterpretation {
  id                     String   @id @default(uuid())
  readingId              String   @map("reading_id")
  readingText            String   @map("reading_text")
  practicalTranslation   String?  @map("practical_translation")
  deadline               String?
  task                   String?
  timingDays             Int?     @map("timing_days")
  accuracyConfirmed      Boolean? @map("accuracy_confirmed") // Whether user confirmed if prediction came true
  accuracyRating         Int?     @map("accuracy_rating") // 1-5 rating of accuracy
  accuracyNotes          String?  @map("accuracy_notes") // User's notes about what happened
  accuracyConfirmedAt    DateTime? @map("accuracy_confirmed_at") // When accuracy was confirmed
  createdAt              DateTime @default(now()) @map("created_at")

  userReading UserReading @relation(fields: [readingId], references: [id], onDelete: Cascade)

  @@index([readingId])
  @@map("ai_interpretations")
}
